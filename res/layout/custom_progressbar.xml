<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_progressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_80_white"
        android:visibility="visible"
        android:clickable="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/pageloading_icon" />

        <ProgressBar
            android:id="@+id/progressBar_launcher"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/page_progressbar"
            android:indeterminateDuration="1000000"/>
    </FrameLayout>
</LinearLayout>